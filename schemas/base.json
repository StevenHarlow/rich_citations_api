{
    "title": "Rich Citations API Schema",
    "id": "http://api.richcitations.org/schema",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "definitions": {
      "bibliographic": {
          "type": "object",
          "properties": {
          },
          "additionalProperties": true
      },
      "citation_group": {
        "type": "object",
        "properties": {
            "id": {"type": "string"},
            "section": {"type": "string"},
            "word_position": {
                "type": "integer"
            },
          "context": {
              "type": "object",
              "required": ["citation"],
              "properties": {
                  "truncated_before": { "type": "boolean" },
                  "text_before": { "type": "string" },
                  "citation": { "type": "string" },
                  "text_after": { "type": "string" },
                  "truncated_after": { "type": "boolean" }
              }
          },
          "references": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [ "id", "references", "context" ],
        "additionalProperties": false
      },
      "reference": {
        "type": "object",
        "required": ["id", "uri", "number"],
        "properties": {
          "id": {
            "type": "string"
          },
          "uri": {
            "type": "string"
          },
          "uri_source": {
            "type": "string"
          },
          "score": {
            "type": "number"
          },
          "bibliographic": { "$ref": "#/definitions/bibliographic" },
          "number": {
            "type": "integer"
          },
          "original_citation": {
            "type": "string"
          },
          "accessed_at": {
            "type": "string",
            "format": "date-time"
          },
          "citation_groups": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "required": ["uri", "bibliographic"],
    "properties": {
        "uri": {
            "type": "string"
        },
        "bibliographic": { "$ref": "#/definitions/bibliographic" },
        "references": {
            "type": "array",
            "items": { "$ref": "#/definitions/reference" }
        },
        "citation_groups": {
              "type": "array",
              "items": { "$ref": "#/definitions/citation_group" }
        },
        "word_count": {
            "type": "integer"
        },
        "updated_by": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "more_stuff": {
          "type": "string"
        }
    },
    "additionalProperties": false
}
